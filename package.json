{
  "name": "huepress",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "esbuild",
      "sharp",
      "workerd"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "dev:api": "wrangler dev --port 8787",
    "deploy:pages": "wrangler pages deploy dist --project-name huepress",
    "deploy:worker": "wrangler deploy",
    "db:migrate": "wrangler d1 execute huepress-db --local --file=./migrations/001_init.sql",
    "db:migrate:prod": "wrangler d1 execute huepress-db --file=./migrations/001_init.sql"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.0",
    "@clerk/clerk-react": "^5.59.2",
    "@cloudflare/containers": "^0.0.31",
    "@hono/clerk-auth": "^2.0.0",
    "@hono/zod-validator": "^0.7.6",
    "@resvg/resvg-wasm": "^2.6.2",
    "@stripe/stripe-js": "^8.6.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.12",
    "clsx": "^2.1.1",
    "easymde": "^2.20.0",
    "hono": "^4.6.15",
    "lucide-react": "^0.460.0",
    "pdf-lib": "^1.17.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.1.1",
    "react-simplemde-editor": "^5.2.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "stripe": "^20.1.0",
    "svix": "^1.82.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.3.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.1",
    "vite": "^6.0.5",
    "vitest": "^4.0.16",
    "wrangler": "^4.56.0"
  }
}
